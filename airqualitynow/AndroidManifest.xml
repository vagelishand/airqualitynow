<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.quadrictech.airqualitynow"
      android:versionCode="1"
      android:versionName="1.0">
      <uses-permission android:name="android.permission.INTERNET" />
      <uses-permission android:name="android.permission.WAKE_LOCK" />
        <application 	android:name="com.quadrictech.airqualitynow.robo.AirQualityNowApplication"
    				 android:label="@string/app_name"
    				 android:theme="@android:style/Theme.Light">
        <activity android:name=".AirQualityNow"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ReportingAreaListActivity" 
			      android:label="Air Quality Reporting Area List"
			      >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".ForecastActivity" 
			      android:label="Air Quality Forecast"
			      >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".ObservationActivity" 
			      android:label="Air Quality Current"
			      >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
		<service android:name="com.quadrictech.airqualitynow.service.DataProviderService"/>
		<service android:name="com.quadrictech.airqualitynow.service.RemoteDataProviderService"/>
    </application>
    <uses-sdk android:minSdkVersion="4"/>
    <uses-sdk android:maxSdkVersion="13"/>
</manifest>