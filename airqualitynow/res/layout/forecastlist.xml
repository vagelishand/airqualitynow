<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:padding="5dp"
       android:background="@drawable/sky">
       <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/forecastListTableActionMenu"
		   android:orientation="vertical"
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
		   >
         	<TableRow android:layout_margin="2dip">
         		<EditText
			  		android:id="@+id/forecastListTableSearchEditText"
			          android:layout_width="0px"
			          android:layout_weight=".45"
			          android:layout_height="wrap_content"
			       />
			    <Button
			  		android:id="@+id/forecastListTableSearchButton"
			          android:layout_width="0px"
			          android:layout_weight=".20"
			          android:layout_height="wrap_content"
			          android:drawableLeft="@drawable/ic_menu_search"
			       />
			    
	         	<Button
		  			android:id="@+id/forecastListTableAddButton"
		          	android:layout_width="0px"
			          android:layout_weight=".20"
		          	android:layout_height="wrap_content"
		          	android:drawableLeft="@drawable/ic_menu_add"
	       		/>
	       		<Button
		  			android:id="@+id/forecastListTableGuideButton"
		          	android:layout_width="0px"
			          android:layout_weight=".15"
		          	android:layout_height="wrap_content"
					android:text="Guide"
	       		/>
			   
         	</TableRow>
         	<TableRow android:layout_margin="1dip">
         	    <TextView
         	    	android:id="@+id/forecastListTableReportingAreaTextView" 
				    android:layout_width="0px"
			          android:layout_weight=".45"
				    android:textAppearance="?android:attr/textAppearanceMedium"
				    android:gravity="left"
				    android:paddingLeft="5dip"
				    android:singleLine="true"
				    android:textColor="#000000"
				    android:layout_margin="1dip"
				    android:text="@string/forecastListTableReportingAreaHeader"
				/>
				<TextView
					android:id="@+id/forecastListTableTodayTextView" 
				    android:layout_width="0px"
				          android:layout_weight=".25"
				    android:textAppearance="?android:attr/textAppearanceMedium"
				    android:gravity="right"
				    android:singleLine="true"
				    android:textColor="#000000"
				    android:layout_margin="1dip"
				    android:text="Today"
				/>
			    <TextView
			    	android:id="@+id/forecastListTableTomorrowTextView" 
				    android:layout_width="0px"
				          android:layout_weight=".3"
				    android:layout_height="wrap_content"
				    android:textAppearance="?android:attr/textAppearanceMedium"
				    android:gravity="right"
				    android:singleLine="true"
				    android:textColor="#000000"
				    android:layout_margin="1dip"
				    android:text="Tomorrow"
				/>
     </TableRow>    	
   </TableLayout>
   <ListView android:id="@+id/forecastAreasList" android:layout_width="fill_parent"
       android:layout_height="0dip" android:layout_weight="1"  />
</LinearLayout>
