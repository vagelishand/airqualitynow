<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
 	android:orientation="vertical" 
     android:layout_width="fill_parent" android:layout_height="fill_parent"
     android:id="@+id/mainTableTab1">
         <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/mainTableActionMenu"
		   android:orientation="vertical"
		   android:layout_width="fill_parent"
		   android:layout_height="fill_parent"
		   android:stretchColumns="0,1">
         	<TableRow>
	         	<TextView
		  		android:id="@+id/mainTable1AddTextView"
		          android:text="Add"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
	       		/>
			   <TextView
			  		android:id="@+id/mainTable1DeleteTextView"
			          android:text="Delete"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			       />
         	</TableRow>
   </TableLayout>
   <ListView android:id="@+id/reportingAreaList" android:layout_width="fill_parent"
       android:layout_height="0dip" android:layout_weight="1"  />
</LinearLayout>
