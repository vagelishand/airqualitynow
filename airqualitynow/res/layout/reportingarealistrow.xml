<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
    <TableRow  android:layout_margin="1dip">
    <TextView 
            android:id="@+id/reportingAreaListCityTextView"
            android:layout_width="0px"
            android:layout_margin="1dip"
            android:layout_weight=".45"
            style="@style/listViewText"
        />
        <TextView 
            android:id="@+id/reportingAreaListCurrentTextView"
            android:layout_width="0px"
            android:layout_margin="1dip"
            android:layout_weight=".25"
            style="@style/listViewNumber"
        />
    <TextView 
            android:id="@+id/reportingAreaListForecastTextView"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_weight=".30"
            style="@style/listViewNumber"
        />
        </TableRow>
</TableLayout>