<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="textFont">
		<item name="android:typeface">serif</item>
	</style>
   	<style name="textTitle" parent="textFont">
		<item name="android:gravity">center</item>
	  	<item name="android:textSize">24sp</item>
	  	<item name="android:textColor">@android:color/black</item>
   	</style>
	<style name="textSubTitle" parent="textFont">
		<item name="android:gravity">center</item>
	  	<item name="android:textSize">18sp</item>
	  	<item name="android:textColor">@android:color/black</item>
	  	<item name="android:background">#eee9e9</item>
	  	
   	</style>   	
   	<style name="tableText" parent="textFont">
   		<item name="android:gravity">center</item>
   		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
   	</style> 
	<style name="tableMsgText" parent="textFont">
		<item name="android:minLines">4</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	</style>
	<style name="listViewText" parent="textFont">
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
		<item name="android:ellipsize">marquee</item>
	</style>
	<style name="listViewNumber" parent="listViewText">
		<item name="android:gravity">right</item>
	</style>
</resources>
